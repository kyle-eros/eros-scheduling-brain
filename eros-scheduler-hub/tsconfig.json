{
  "compilerOptions": {
    "target": "ES2019",
    "module": "System",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "types": ["google-apps-script"],
    "skipLibCheck": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"]
}
